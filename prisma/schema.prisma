// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// user schema
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  phone     Int?
  firstname String
  lastName  String
  social    Json?
  courses   Course[] // many to many erationship to the Course relation
}

// course schema
model Course {
  id            Int    @id @default(autoincrement())
  name          String
  courseDetails String
  members       User[]
}

model courseEnrollment {
  createdAt DateTime @default(now())
  role      UserRole

  userId   Int // relations
  courseId Int
  user     User   @relation(fields: [userId], references: [id])
  course   Course @relation(fields: [courseId], references: [id])

  @@id([uerId, courseId, role])
}

enum UserRole {
  STUDENT
  TEACHER
}

// test
model Test {
  id        Int      @id @default(autoincrement())
  updatedAt DateTime @updatedAt
  name      String
  date      DateTime
}

model TestResult {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  result    Int // as percentage
}
